[user]
	name = Ricardo Lopes
	email = mail@ricardolopes.net
[core]
  excludesFile = ~/.gitignore
[push]
	default = simple
[pull]
	rebase = true
[alias]
  st = status -s
  ci = commit --verbose
  br = branch
  co = checkout
  cob = checkout -b
  df = diff
  lg = log -p
  tree = log --oneline --decorate --all --graph
  sh = show
  pl = pull --rebase
  ps = push
  undo = reset HEAD~1 --mixed
  amend = commit --amend --verbose
  aa = add .
